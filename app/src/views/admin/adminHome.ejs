<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head", {title: "Admin Home"}) %> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<body>
    <!-- header -->
    <%- include("../partials/header") %> 

    <!-- Main -->
    <main class="adminHome">
        <section class="admin-add-user">
            <article>
                <a href="/products/create" title="Agregar producto"><i class="bi bi-plus plus"></i></a>
            </article>
            <article>
                <a href="/" title="Usuarios"><i class="bi bi-people people"></i></a>
            </article>
        </section>
        <section class="row ">
            <article class="col-12 table-responsive">
                <table class="table ">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Productos</th>
                            <th scope="col">Ver</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% products.forEach(product =>{%>
                            <tr>
                                <th scope="row"><%= product.id%></th>
                                <td class="align-middle"><%= product.name%></td>
                                <td class="align-middle">
                                    <a href="/products/detail/<%= product.id %>" title="Ver">
                                        <i class="bi bi-eye eye" ></i>
                                    </a>
                                </td>
                                <td class="align-middle">
                                    <a href="/products/edit/<%= product.id %>" title="Editar">
                                        
                                        <i class="bi bi-pencil-square pencil"></i>
                                    </a>
                                </td>
                                <form action="/products/delete/<%= product.id %>?_method=DELETE" method="post">
                                    <td class="align-middle ">
                                        <button class="a" title="Eliminar">
                                            <i class="bi bi-trash3 trash"></i>
                                        </button>
                                        
                                    </td>
                                </form>
                               
                            </tr>
                        <%});%>
                        
                        
                    </tbody>
                </table>
            </article>

        </section>


    </main>

    <!-- footer -->
    <%- include("../partials/footer") %> 
    <%- include("../partials/scripts") %>
</body>
</html>