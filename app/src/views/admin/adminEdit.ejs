<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %>

<title>Admin - editar producto</title>
<body>
    <!-- header -->
    <%- include("../partials/header") %> 
    <!-- fin del header -->

    <main id="register">
        <div class="registro-container">
            <form action="/admin/update/<%= productToEdit.id  %>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <div class="registro-form">
    
                    <h4>Editar producto</h4>
                    <!-- nombre del producto -->
                    <div class="input-container">
                        <h6  class="datos-box">Nombre del producto:<%= productToEdit.name %></h6>
                        <input class="input-style" type="text" name="name" id="name" placeholder="Ingresar nombre..." value="">
                    </div>
                    <div class="input-container">
                        <h6 class="datos-box">Marca del producto: <%= productToEdit.brand  %></h6>
                        <input class="input-style" type="text" name="brand" id="brand" placeholder="Ingresar la marca..." value="">
                    </div>
    
                    <!-- agregar categoria -->
                    <div class="input-container">
                        <h6 class="datos-box">Categoria:<%= productToEdit.category %></h6>
                        <select name="category" id="category" class="input-select">
                            <option value="" hidden selected>Elija su categoria</option>
                            <option value="Notebooks">Notebooks</option>
                            <option value="Computadores">Computadores</option>
                            <option value="Componentes-de-PC">Componentes de PC</option>
                            <option value="Monitores">Monitores</option>
                            <option value="Consolas">Consolas</option>
                        </select>
                    </div>
                    <!-- agregar sub categoria -->
                    <div class="input-container">
                        <h6 class="datos-box">Sub-categoria:<%= productToEdit.lastname %></h6>
                        <input class="input-style" type="text" name="lastname" placeholder="Ingresar Sub-categoria" value="">
                    </div>
                    <!-- price -->
                    <!-- descount -->
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box ">Precio:<%= productToEdit.price
                             %></h6>
                            <input class="input-style" type="text" name="price" id="price" placeholder="Precio" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6 class="datos-box">Descuento:<%= productToEdit.discount %></h6>
                            <input class="input-style" type="text" name="discount" id="discount" placeholder="Descuento" value="">
                        </div>
                    </div>
                    <div class="contaner-price-descount container-price-b">
                        <div class="input-container ">
                            <h6 class="datos-box ">Stock:<%= productToEdit.stock %></h6>
                            <input class="input-style" type="text" name="stock" id="stock" placeholder="Stock" value="">
                        </div>
                    </div>
    
                    <!-- ESPECIFICACION TECNICA -->
                    <h6 class="datos-box title-tecnicalEspecific">Especificaciones tecnicas</h6>
                    <!-- description general -->
                    <div class="input-container">
                        <h6 class="datos-box">Descripción: <%= productToEdit.description %></h6>
                        <textarea name="description" id="description"  placeholder="Descripción del producto..."></textarea>
                    </div>
    
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">CPU:<%= productToEdit.cpu %></h6>
                            <input class="input-style" type="text" name="cpu" id="cpu" placeholder="CPU" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Placa/Grafica:<%= productToEdit.graphic-card %></h6>
                            <input class="input-style" type="text" name="graphic-card" id="graphic-card" placeholder="Placa Grafica" value="">
                        </div>
                    </div>
                    <div class="input-container">
                        <h6 class="datos-box">Sistemas operativos:</h6>
                        <select name="so" id="so" class="input-select" >
                            <option value="" hidden selected>Elija los SO:<%= productToEdit.so %></option>
                            <option value="Windows">Windows</option>
                            <option value="Linux">Linux</option>
                            <option value="MacOS">MacOS</option>
                            <option value="Ubuntu">Ubuntu Linux</option>
                        </select>
                    </div>
                    <!-- memoria/almacenamiento -->
                    <h6 class="datos-box title-tecnicalEspecific">Memorias</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">RAM/tipo:<%= productToEdit.ram %></h6>
                            <input class="input-style" type="text" name="ram" id="ram" placeholder="RAM" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Capacidad/tipo:<%= productToEdit.capacity %></h6>
                            <input class="input-style" type="text" name="capacity" id="capacity" placeholder="Capacidad/tipo" value="">
                        </div>
                    </div>
    
                    <!-- conectivilidad -->
                    <h6 class="datos-box title-tecnicalEspecific">Conectivilidad</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Puertos:<%= productToEdit.puertos %></h6>
                            <input class="input-style" type="text" name="ports" id="ports" placeholder="Puertos" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Puertos HDMI:<%= productToEdit.hdmi %></h6>
                            <input class="input-style" type="text" name="hdmi" id="hdmi" placeholder="Puertos HDMI" value="">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Puertos Ethernet:<%= productToEdit.ethernet %></h6>
                            <input class="input-style" type="text" name="ethernet" id="ethernet" placeholder="Puertos Ethernet" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Puertos USB:<%= productToEdit.usb %></h6>
                            <input class="input-style" type="text" name="usb" id="usb" placeholder="Puertos USB" value="">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">WIFI:<%= productToEdit.wifi %></h6>
                            <input class="input-style" type="text" name="wifi" id="wifi" placeholder="WIFI" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">WebCam:<%= productToEdit.webCam  %></h6>
                            <input class="input-style" type="text" name="webCam" id="webCam" placeholder="WebCam" value="">
                        </div>
                    </div>
                    <div class="contaner-price-descount container-price-b">
                        <div class="input-container ">
                            <h6 class="datos-box ">Bluetooth:<%= productToEdit.bluetooth %></h6>
                            <input class="input-style" type="text" name="bluetooth" id="bluetooth" placeholder="Bluetooth" value="">
                        </div>
                    </div>
                    <!-- pantalla -->
                    <h6 class="datos-box title-tecnicalEspecific">Pantalla</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Tamaño:<%= productToEdit.screen-size %></h6>
                            <input class="input-style" type="text" name="screen-size" id="screen-size" placeholder="Tamaño" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Tipo display:<%= productToEdit.display %></h6>
                            <input class="input-style" type="text" name="display" id="display" placeholder="Tipo-display" value="">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">resolucion:<%= productToEdit.resolution %></h6>
                            <input class="input-style" type="text" name="resolution" id="resolution" placeholder="resolucion" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Conección:<%= productToEdit.conection %></h6>
                            <input class="input-style" type="text" name="conection" id="Conection" placeholder="Conección" value="">
                        </div>
                    </div>
                    <!-- dimenciones -->
                    <h6 class="datos-box title-tecnicalEspecific">Dimenciones</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Peso:<%= productToEdit.weight %></h6>
                            <input class="input-style" type="text" name="weight" placeholder="resolucion" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Alto:<%= productToEdit.high %></h6>
                            <input class="input-style" type="text" name="high" id="high" placeholder="Alto"value="">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Ancho:<%= productToEdit.width %></h6>
                            <input class="input-style" type="text" name="width" id="width" placeholder="Ancho" value="">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Profundidad:<%= productToEdit.depth %></h6>
                            <input class="input-style" type="text" name="depth" id="depth" placeholder="Profundidad" value="">
                        </div>
                    </div>
    
                    <!-- agregar image -->
                    <div class="input-container input-file">
    
                        <h6 class="datos-box">Imagenes del producto:</h6>
                        <input class="input-style-file"  type="file"  name="image" id="image" multiple>
                        
                    </div>
    
                    <!-- boton de enviar -->
                    <button class="button-container" type="submit"><a class="register"  href="../login.html">Guardar cambios</a></button>
                </div>
            </form>
        </div>
    </main>
    
    <!-- footer -->
    <%- include("../partials/footer") %> 
    <!-- fin del footer -->
    <%- include("../partials/scripts") %>
    
</body>
</html>