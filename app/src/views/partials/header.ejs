<header>
  <!--logo,barra de navegacion,busqueda,login,carrito de compras,liks de enlaces-->
  <div class="logo">
    <a href="/"><img class="logo" src="/images/logo ecomerce.jpg" alt="logo"></a>
  </div>
  <!-- menu de hamburguesa-->
  <div class="oscurecer"></div>
  <div class="hamburguer-container" id="menu">
    <a class="hamburguer button" >
      <i class="fas fa-bars"></i>
    </a>
  </div>
  <nav class="close">
    <ul class="container-nav">
      <li><a href="/products">Todos los productos</a></li>
      <li><a href="/products/categories/1">Notebooks</a></li>
      <li><a href="/products/categories/2">Computadores</a></li>
      <li><a href="/products/categories/3">Componentes de PC</a></li>
      <li><a href="/products/categories/4">Monitores</a></li>
      <li><a href="/products/categories/5">Consolas</a></li>

    </ul>
  </nav>
  <!-- top bar -->
  <div class="top-bar">
    <div class="input-glass">
      <form action="/products/search" method="GET" class="form-header">
      <div class="input-search">
        <!-- input buscador -->
        <input class="search" type="text" placeholder="buscar" name="keywords">
      </div>
      <button class="glass button" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
    </div>
    <div class="user-cart">
      <%if (typeof session.user != "undefined") {%>
        <a href="/users/userHome" class="user button">
          <!--boton usuario -->
          <span class="user-session"></span>
          <i class="fa-solid fa-user"></i>
        </a>
        <div class="users-menu">
          <%if (session.user.category === 1) {%>
            <a class="users-menu-links" href="/admin/home">Admin</a>
          <%}%>
          <a class="users-menu-links" href="/users/userHome">Mis datos</a>
          <a class="users-menu-links" href="/users/logOut">Cerrar sesi√≥n</a>
        </div>
      <%}else {%>
        <a href="/users/login" class="user button">
          <i class="fa-solid fa-user"></i>
        </a>
      <%}%>

      <a href="/productDetail/productCart" class="cart button">
        <!-- carrito de compras -->
        <i class="fa-solid fa-cart-shopping"></i>
      </a>
    </div>
  </div>

  <nav>
    <ul class="links-busquedas">
      <li><a href="/products">Todos los productos</a></li>
      <li><a href="/products/categories/1">Notebooks</a></li>
      <li><a href="/products/categories/2">Computadores</a></li>
      <li><a href="/products/categories/3">Componentes de PC</a></li>
      <li><a href="/products/categories/4">Monitores</a></li>
      <li><a href="/products/categories/5">Consolas</a></li>

    </ul>
  </nav>
</header>